<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Volunteers</title>
    <link rel="stylesheet" href="/chatstyles.css">
</head>
<body>
    <header></header>
        <nav class="navbar">
            <div class="logo">
                <a href="/">Turtle Shelter Project</a>
            </div>
            <ul class="nav-links">
                <li><a href="/manageUsers">View Volunteers</a></li>
                <li><a href="/manageEvents">Manage Events</a></li>
                <li><a href="/manageRequests">Manage Requests</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </nav>
    </header>
    
    <table>
        <caption><b>All Volunteers </b></caption>
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>City</th>
                <th>State</th>
                <th>Sewing Level</th>
                <th>Hours/Month</th>
                <th>Source</th>
                <th>Role</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% if (volunteers.length > 0) { %>
                <% volunteers.forEach(row => { %>
                    <tr>
                        <td><%= row.vol_first_name %></td>
                        <td><%= row.vol_last_name %></td>
                        <td><%= row.vol_email %></td>
                        <td><%= row.vol_phone %></td>
                        <td><%= row.vol_city %></td>
                        <td><%= row.vol_state %></td>
                        <td><%= row.vol_sewing_level%></td>
                        <td><%= row.vol_hours_per_month %></td>
                        <td><%= row.vol_source_type%></td>
                        <td><%= row.vol_role%></td>
                        <td  style="text-align: center;">
                            <form class='action-button' action="/editVolunteer/<%= row.vol_id %>" method="GET" style="display: inline;">
                                <button type="submit">Edit</button>
                            </form>
                        </td>
                        <td>
                            <form class='action-button' action="/deleteVolunteer/<%= row.vol_id %>" method="POST" style="display: inline;">
                                <button type="submit" onclick="return confirm('Are you sure you want to delete this task?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="9">No volunteers found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <div class="center-button"> 
        <form action="/addVolunteer" method="GET" >
            <button type="submit">Add Volunteer</button>
        </form>
    </div>

    <footer id='footer' class="footer">
        <p>&copy; 2024 Turtle Shelter Project | All rights reserved | 
            <a href="mailto:turtleshelterproject@gmailcom">turtleshelterproject@gmail.com</a> |
            <a href="tel:(801) 872-3190">(801) 872-3190</a>
        </p>
    </footer>
</body>
</html>
